import { cn } from "@/lib/utils";
import { LucideIcon } from "lucide-react";

interface AnalysisFactorCardProps {
  icon: LucideIcon;
  title: string;
  value: number;
  description: string;
  delay?: number;
}

const AnalysisFactorCard = ({ 
  icon: Icon, 
  title, 
  value, 
  description,
  delay = 0 
}: AnalysisFactorCardProps) => {
  const getValueColor = (val: number) => {
    if (val >= 70) return "text-success";
    if (val >= 40) return "text-warning";
    return "text-destructive";
  };

  const getBarColor = (val: number) => {
    if (val >= 70) return "bg-success";
    if (val >= 40) return "bg-warning";
    return "bg-destructive";
  };

  return (
    <div 
      className={cn(
        "bg-gradient-card rounded-xl p-5 border border-border/50",
        "opacity-0 animate-fade-up shadow-card hover:shadow-elevated transition-shadow duration-300"
      )}
      style={{ animationDelay: `${delay}ms`, animationFillMode: 'forwards' }}
    >
      <div className="flex items-start gap-4">
        <div className="p-2.5 rounded-lg bg-primary/10">
          <Icon className="w-5 h-5 text-primary" />
        </div>
        
        <div className="flex-1">
          <div className="flex items-center justify-between mb-1">
            <h4 className="font-medium text-foreground">{title}</h4>
            <span className={cn("font-mono font-bold", getValueColor(value))}>
              {value}%
            </span>
          </div>
          
          <div className="w-full h-2 bg-secondary rounded-full overflow-hidden mb-2">
            <div 
              className={cn("h-full rounded-full transition-all duration-1000 ease-out", getBarColor(value))}
              style={{ 
                width: `${value}%`,
                transitionDelay: `${delay + 200}ms`
              }}
            />
          </div>
          
          <p className="text-sm text-muted-foreground">
            {description}
          </p>
        </div>
      </div>
    </div>
  );
};

export default AnalysisFactorCard;
