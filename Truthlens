import Header from "@/components/Header";
import HeroSection from "@/components/HeroSection";
import ContentInput from "@/components/ContentInput";
import AnalysisResults from "@/components/AnalysisResults";

interface AnalysisResult {
  trustScore: number;
  emotionalManipulation: number;
  sourceCredibility: number;
  factualConsistency: number;
  linguisticPatterns: number;
  summary: string;
  keyFindings: string[];
}

const Index = () => {
  const [isLoading, setIsLoading] = useState(false);
  const [results, setResults] = useState<AnalysisResult | null>(null);

  const simulateAnalysis = (content: string): AnalysisResult => {
    // Simulated analysis based on content length and patterns
    const hasEmotionalWords = /shocking|unbelievable|they don't want you|secret|exposed/i.test(content);
    const hasSourceMentions = /according to|study shows|research|experts|officials/i.test(content);
    const isLongForm = content.length > 500;
    const hasAllCaps = (content.match(/[A-Z]{5,}/g) || []).length > 2;
    
    const baseScore = 50;
    let trustScore = baseScore;
    
    if (hasSourceMentions) trustScore += 20;
    if (isLongForm) trustScore += 10;
    if (hasEmotionalWords) trustScore -= 25;
    if (hasAllCaps) trustScore -= 15;
    
    trustScore = Math.max(10, Math.min(95, trustScore + (Math.random() * 20 - 10)));
    
    const emotionalManipulation = hasEmotionalWords 
      ? Math.round(60 + Math.random() * 30) 
      : Math.round(15 + Math.random() * 25);
      
    const sourceCredibility = hasSourceMentions 
      ? Math.round(60 + Math.random() * 30) 
      : Math.round(20 + Math.random() * 30);
      
    const factualConsistency = Math.round(trustScore - 10 + Math.random() * 20);
    const linguisticPatterns = hasAllCaps 
      ? Math.round(50 + Math.random() * 30) 
      : Math.round(10 + Math.random() * 30);

    const keyFindings: string[] = [];
    
    if (hasSourceMentions) {
      keyFindings.push("Content references external sources, which increases credibility.");
    } else {
      keyFindings.push("No verifiable sources are cited in this content.");
    }
    
    if (hasEmotionalWords) {
      keyFindings.push("High emotional language detected that may influence reader perception.");
    }
    
    if (hasAllCaps) {
      keyFindings.push("Excessive use of capitalization suggests sensationalism.");
    }
    
    if (isLongForm) {
      keyFindings.push("Detailed content structure typical of legitimate reporting.");
    } else {
      keyFindings.push("Brief content may lack context for complete verification.");
    }
    
    if (trustScore >= 70) {
      keyFindings.push("Overall patterns are consistent with verified news sources.");
    }

    const summaries = {
      high: "This content shows characteristics of credible reporting, with proper source citations and balanced language. However, always verify claims with multiple trusted sources.",
      medium: "This content contains mixed signals. While some elements suggest legitimacy, others raise concerns. We recommend cross-referencing with established news outlets before sharing.",
      low: "This content displays multiple red flags commonly associated with misinformation, including emotional manipulation, lack of sources, and sensational language. Exercise extreme caution."
    };

    const summary = trustScore >= 70 
      ? summaries.high 
      : trustScore >= 40 
        ? summaries.medium 
        : summaries.low;

    return {
      trustScore: Math.round(trustScore),
      emotionalManipulation,
      sourceCredibility,
      factualConsistency: Math.max(10, Math.min(95, factualConsistency)),
      linguisticPatterns,
      summary,
      keyFindings
    };
  };

  const handleAnalyze = async (content: string) => {
    setIsLoading(true);
    setResults(null);
    
    // Simulate API call delay
    await new Promise(resolve => setTimeout(resolve, 2000));
    
    const analysisResults = simulateAnalysis(content);
    setResults(analysisResults);
    setIsLoading(false);
  };

  return (
    <div className="min-h-screen bg-background">
      <Header />
      <HeroSection />
      
      <main className="container mx-auto px-4 pb-20">
        <ContentInput onAnalyze={handleAnalyze} isLoading={isLoading} />
        
        {isLoading && (
          <div className="w-full max-w-3xl mx-auto mt-12">
            <div className="bg-gradient-card rounded-2xl border border-border/50 p-8 text-center">
              <div className="relative w-16 h-16 mx-auto mb-4">
                <div className="absolute inset-0 rounded-full border-2 border-primary/20" />
                <div className="absolute inset-0 rounded-full border-2 border-transparent border-t-primary animate-spin" />
              </div>
              <p className="text-muted-foreground">Analyzing content patterns...</p>
              <p className="text-sm text-muted-foreground/60 mt-1">
                Checking sources, language, and credibility signals
              </p>
            </div>
          </div>
        )}
        
        {results && !isLoading && (
          <AnalysisResults results={results} />
        )}
      </main>
    </div>
  );
};

export default Index;
